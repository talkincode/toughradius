<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>RADIUSD</contextName>
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />
    <property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN:-%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

    <logger name="org.springframework" level="info" addtivity="false" >
        <appender-ref ref="console"/>
    </logger>
    <logger name="org.toughtadius.controller" level="info" additivity="false">
        <appender-ref ref="console"/>
    </logger>
    <logger name="org.toughtadius.component" level="info" additivity="false">
        <appender-ref ref="console"/>
    </logger>
    <logger name="org.toughtadius.handler" level="info" additivity="false">
        <appender-ref ref="console"/>
    </logger>
    <logger name="org.toughtadius.mapper" level="info" additivity="false">
        <appender-ref ref="console"/>
    </logger>
    <logger name="org.toughtadius.config" level="info" additivity="false">
        <appender-ref ref="console"/>
    </logger>
    <logger name="org.springframework.web" level="info" additivity="false">
        <appender-ref ref="console"/>
    </logger>

</configuration>